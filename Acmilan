  <script>

    // Effet lumière qui suit la souris

    const cursor = document.getElementById('cursorLight');

    document.addEventListener('mousemove', (e) => {

      cursor.style.opacity = 1;

      cursor.style.left = e.clientX + 'px';

      cursor.style.top = e.clientY + 'px';

    });

    document.addEventListener('mouseleave', () => {

      cursor.style.opacity = 0;

    });



    // Mode Néon

    const btnNeon = document.getElementById('btnNeon');

    btnNeon.addEventListener('click', () => {

      document.querySelectorAll('.card, section').forEach(el => {

        el.classList.toggle('neon');

      });

      document.querySelectorAll('h1, h2').forEach(el => {

        el.classList.toggle('neon-text');

      });

    });



    // Quiz simple

    const btnQ1 = document.getElementById('btn-q1');

    const resQ1 = document.getElementById('res-q1');

    btnQ1.addEventListener('click', () => {

      const val = document.getElementById('q1').value.trim().toLowerCase();

      if (!val) {

        resQ1.textContent = "Écris une réponse d’abord.";

        resQ1.style.color = "#ffcc00";

        return;

      }

      if (val.includes('nordahl')) {

        resQ1.textContent = "Parfait ! Gunnar Nordahl est bien le meilleur buteur de l’histoire du Milan.";

        resQ1.style.color = "#00ff88";

      } else {

        resQ1.textContent = "Non, cherche un attaquant suédois des années 1950…";

        resQ1.style.color = "#ff5555";

      }

    });



    // Quiz avancé

    const questions = [

      {

        q: "Quel défenseur légendaire porte le numéro 3 retiré par le Milan ?",

        good: ["maldini","paolo maldini"]

      },

      {

        q: "Quel attaquant ukrainien a marqué plus de 170 buts pour le club ?",

        good: ["shevchenko","andriy shevchenko"]

      },

      {

        q: "Quel buteur suédois est le meilleur scoreur de l’histoire du club ?",

        good: ["nordahl","gunnar nordahl"]

      }

    ];

    let qi = 0;

    let score = 0;

    const qaQ = document.getElementById('qa-question');

    const qaA = document.getElementById('qa-answer');

    const qaVal = document.getElementById('qa-validate');

    const qaNext = document.getElementById('qa-next');

    const qaScoreBox = document.getElementById('qa-score');

    const quizBox = document.getElementById('quiz-advanced-box');



    function loadQuestion() {

      qaQ.textContent = questions[qi].q;

      qaA.value = "";

      qaNext.disabled = true;

    }

    loadQuestion();



    qaVal.addEventListener('click', () => {

      const rep = qaA.value.trim().toLowerCase();

      if (!rep) {

        qaScoreBox.textContent = "Écris ta réponse.";

        qaScoreBox.style.color = "#ffcc00";

        return;

      }

      const goodArr = questions[qi].good;

      const ok = goodArr.some(g => g === rep);

      if (ok) {

        score++;

        qaScoreBox.textContent = "Bonne réponse ! Score : " + score + " / " + questions.length;

        qaScoreBox.style.color = "#00ff88";

        qaNext.disabled = false;

        qaVal.disabled = true;

        if (score === questions.length) {

          // petite surprise visuelle

          quizBox.classList.add('neon');

          setTimeout(() => quizBox.classList.remove('neon'), 2000);

        }

      } else {

        score = 0;

        qi = 0;

        qaScoreBox.textContent = "Raté ! Le score repart à zéro, nouvelle série.";

        qaScoreBox.style.color = "#ff5555";

        qaVal.disabled = false;

        qaNext.disabled = true;

        loadQuestion();

      }

    });



    qaNext.addEventListener('click', () => {

      qi++;

      if (qi >= questions.length) {

        qi = 0;

      }

      qaVal.disabled = false;

      loadQuestion();

    });



    // Cartes mémoire

    const flipCards = document.querySelectorAll('.flip-card');

    flipCards.forEach(card => {

      card.addEventListener('click', () => {

        card.classList.toggle('flipped');

      });

    });

    document.getElementById('btn-reset-flip').addEventListener('click', () => {

      flipCards.forEach(card => card.classList.remove('flipped'));

    });



    // Filtre Futbin

    const searchInput = document.getElementById('fc-search');

    const fcItems = document.querySelectorAll('.fc-item');

    searchInput.addEventListener('input', () => {

      const txt = searchInput.value.trim().toLowerCase();

      fcItems.forEach(item => {

        const name = item.getAttribute('data-name').toLowerCase();

        item.style.display = (!txt || name.includes(txt)) ? "" : "none";

      });

    });

  </script>

</body>

</html>
